<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/losebackground"
    tools:context="com.example.user.mosquitosimulator.LoseActivity">

    <TextView android:text="烤      焦" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textColor="#ffff1720"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="189dp"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Try Again"
                android:id="@+id/button"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:onClick="loseTryAgain"
                android:layout_marginLeft="20dp"
                android:singleLine="true"
                android:background="#0044bb"
                android:textColor="#e6e6fa"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:id="@+id/button5"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="20dp"
                android:onClick="backToMenu"
                android:background="#0044bb"
                android:textColor="#e6e6fa"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
